# includes/map.h

```c
#ifndef MAP_H
# define MAP_H

# include "player.h"
# include "enemy.h"

typedef struct s_point
{
    int x;
    int y;
}   t_point;

typedef enum e_point_type
{
    WALL,
    FLOOR,
    COLLECTIBLE,
    EXIT_
}   t_point_type;

typedef struct s_map
{
    char    **grid; // nul-terminated rows
    int     width;
    int     height;
    int     collectible_count;
    int     player_count;
    int     exit_count;
    t_player   player;
    t_enemy    *enemies;
    int        enemy_count;
}   t_map;

// map functions
int     load_map_from_file(const char *path, t_map *map);
int     validate_map(t_map *map);
void    free_map(t_map *map);

#endif
```

